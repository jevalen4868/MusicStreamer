<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fallenman.apps.musicstreamer.EntityDetailActivityFragment">

    <ImageView
        android:layout_margin="25dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:id="@+id/imageView_detailEntityImage"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:id="@+id/textView_detailEntityName"
        android:layout_alignBottom="@+id/imageView_entityImage"
        android:layout_toRightOf="@+id/imageView_entityImage"
        android:layout_toEndOf="@+id/imageView_entityImage"
        android:layout_alignTop="@+id/imageView_entityImage" />

</RelativeLayout>
